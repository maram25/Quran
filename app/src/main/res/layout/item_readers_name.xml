<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Beige"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_65ssp"
        android:layout_height="@dimen/_65ssp"
        android:layout_margin="@dimen/_10ssp"
        app:cardCornerRadius="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/readerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/reader_name_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginRight="@dimen/_5ssp"
        android:text="مشاري راشد"
        android:textAlignment="textStart"
        android:textColor="@color/green"
        app:layout_constraintEnd_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"
/>

    <TextView
        android:id="@+id/reader_name_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meshary Rashid"
        android:textAlignment="textEnd"
        android:layout_marginBottom="@dimen/_20ssp"
        android:layout_marginRight="@dimen/_5ssp"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/reader_name_ar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1ssp"
        android:background="@color/green"
        android:layout_marginRight="@dimen/_10ssp"
        android:layout_marginLeft="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
