<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20ssp"
        android:layout_marginLeft="@dimen/_20ssp"
        android:fontFamily="@font/font_r"
        android:layout_marginBottom="@dimen/_20ssp"
        android:textColor="@color/green"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20ssp"
        android:layout_marginRight="@dimen/_20ssp"
        android:fontFamily="@font/font_r"
        android:textColor="@color/green"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/indeterminate"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true">

        </ProgressBar>
        <SeekBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:outlineAmbientShadowColor="@color/green"
         />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <ImageView
            android:id="@+id/play_list"
            android:layout_width="@dimen/_22ssp"
            android:layout_height="@dimen/_22ssp"
            android:layout_margin="@dimen/_20ssp"
            android:src="@drawable/play_list"
            app:tint="@color/green">

        </ImageView>

        <ImageView
            android:id="@+id/rewind"
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            android:layout_margin="@dimen/_20ssp"
            android:src="@drawable/following"
            app:tint="@color/green" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:background="@color/green"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/forward"
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            android:layout_margin="@dimen/_20ssp"
            android:src="@drawable/next"
            app:tint="@color/green" />

        <ImageView
            android:id="@+id/loop"
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            android:layout_margin="@dimen/_20ssp"
            android:src="@drawable/loop"
            app:tint="@color/green" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>