<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/switchLangActivity"
        tools:context=".SwitchLang"
        android:background="@drawable/splash_bg">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="170dp"

        android:src="@drawable/new_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_30ssp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/arLang"
            android:layout_width="170dp"
            android:layout_height="@dimen/_50ssp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/green_button"


            android:gravity="center"
            android:text="عربي"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/enLang"
            android:layout_width="170dp"
            android:layout_height="@dimen/_50ssp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10ssp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:text="Einglish"
            android:textColor="@color/white"
            android:textSize="25dp" />


    </LinearLayout>

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100ssp"
        android:src="@drawable/splash_footer"
        app:layout_constraintBottom_toBottomOf="parent">

    </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

